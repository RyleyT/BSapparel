    <input type="text" name="name" id="inputName" value="<%= 
    user.name %>" placeholder="Name" autofocus>
    
    <label for="inputUsername">Username</label>
    <input type="text" name="username" id="inputUsername" value="<%= 
    user.username %>" placeholder="Username" autofocus>
    
    <label for="inputEmail">Email</label>
    <input type="text" name="email" id="inputEmail" value="<%= 
    user.email %>" placeholder="Email Address" required>
    
    <label for="inputName">Address</label>
